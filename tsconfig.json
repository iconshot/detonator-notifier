{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist/esm",
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "declaration": true,
    "types": [],
    "removeComments": true
  },
  "include": ["./src"]
}
